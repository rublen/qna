showFlash("<%= j render 'shared/flash' %>");

var question = document.querySelector('.question');
var questionErrors = question.querySelector('.question-errors');

var questionTitle = question.querySelector('.question-title');
var questionBody = question.querySelector('.question-body');
var questionAttachments = question.querySelector('.attachments');

var questionEditLink = document.querySelector('[data-id="<%= @question.id %>"]', '[data-model="question"]');


questionErrors.innerHTML = "<%= j render 'shared/errors', resource: @question %>";

if (questionErrors.innerHTML == '') {
  questionTitle.textContent = '<%= @question.title %>';
  questionBody.textContent = '<%= @question.body %>';
  questionAttachments.innerHTML = '<%= j render @question.attachments %>'
  editHideClassHandler('question', "<%= @question.id %>");
};
